---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedDate?: string;
}

const {
  title,
  description = "Personalized home-based speech therapy for children ages 2+ in Kansas City. Molly Kolarik, CCC-SLP, helps kids find their voice in the comfort of their own home.",
  image = "/headshot.png",
  type = "website",
  publishedDate
} = Astro.props;

const siteUrl = "https://kolarikspeechtherapy.com";
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const imageUrl = new URL(image, siteUrl).href;
const fullTitle = `${title} | Kolarik Speech Therapy`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="google-site-verification" content="9IhRpv6j9_BXRAfaRvsu6LdoDzRDhcIX7wsd9Ou96Hc" />
    <meta name="description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:site_name" content="Kolarik Speech Therapy" />
    <meta property="og:locale" content="en_US" />
    {publishedDate && <meta property="article:published_time" content={publishedDate} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/png" href="/favicon.ico" sizes="48x48" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <title>{fullTitle}</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,400;9..144,500;9..144,600;9..144,700&family=Nunito:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-1TDDYMJY8J"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-1TDDYMJY8J');
    </script>
    
    <!-- LocalBusiness Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "HealthBusiness",
      "additionalType": "https://schema.org/MedicalBusiness",
      "name": "Kolarik Speech Therapy",
      "description": "Personalized home-based speech therapy for children ages 2+ in the Kansas City metro area. Specializing in speech sound disorders, language delays, autism spectrum support, and early intervention.",
      "url": "https://kolarikspeechtherapy.com",
      "telephone": "+1-816-729-1513",
      "email": "kolarikspeechtherapy@gmail.com",
      "founder": {
        "@type": "Person",
        "name": "Molly Kolarik",
        "jobTitle": "Speech-Language Pathologist",
        "description": "Licensed pediatric speech-language pathologist (CCC-SLP) with a Master's degree from the University of Central Missouri"
      },
      "areaServed": {
        "@type": "GeoCircle",
        "geoMidpoint": {
          "@type": "GeoCoordinates",
          "latitude": 39.0997,
          "longitude": -94.5786
        },
        "geoRadius": "50 mi"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 39.0997,
        "longitude": -94.5786
      },
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Kansas City",
        "addressRegion": "MO",
        "addressCountry": "US"
      },
      "serviceType": ["Pediatric Speech Therapy", "Speech Sound Disorders Treatment", "Language Delay Therapy", "Autism Spectrum Support", "Early Intervention", "Fluency Therapy", "Feeding Therapy"],
      "priceRange": "$$",
      "currenciesAccepted": "USD",
      "paymentAccepted": "Cash, Credit Card, Check",
      "image": "https://kolarikspeechtherapy.com/headshot.png",
      "logo": "https://kolarikspeechtherapy.com/logo.png",
      "sameAs": []
    }
    </script>
  </head>
  <body class="bg-cream text-warmgray-700 min-h-screen flex flex-col">
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="skip-to-content">
      Skip to main content
    </a>
    <Header />
    <main id="main-content" class="flex-grow">
      <slot />
    </main>
    <Footer />
    
    <script>
      // Scroll animations
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      }, {
        threshold: 0.1
      });

      document.querySelectorAll('.animate-on-scroll').forEach((el) => {
        observer.observe(el);
      });
    </script>
  </body>
</html>
