---
import Layout from '../layouts/Layout.astro';

const posts = [
  {
    title: "5 Signs Your Toddler Might Benefit from Speech Therapy",
    slug: "signs-toddler-needs-speech-therapy",
    excerpt: "If you've caught yourself wondering whether your toddler's speech is 'normal,' you're not alone. Here are five signs that a speech evaluation might be worth exploring.",
    date: "December 2025",
    category: "Speech Development"
  }
];
---

<Layout title="Blog">
  <!-- Blog Header with Pattern -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 opacity-40" style="background-image: url('/blog-pattern.png'); background-size: 400px;"></div>
    <div class="relative max-w-6xl mx-auto px-4 text-center">
            <h1 class="text-4xl font-bold text-warmgray-700 mb-4 animate-on-scroll">The Nest</h1>
      <p class="text-lg text-warmgray-500 max-w-2xl mx-auto animate-on-scroll">
        Tips, insights, and encouragement for supporting your child's communication journey.
      </p>
    </div>
  </section>

  <!-- Subscribe Banner -->
  <section class="bg-sage-50 py-10">
    <div class="max-w-2xl mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center gap-6 text-center md:text-left">
        <img src="/bird-envelope.png" alt="" class="w-24 h-auto" />
        <div class="flex-1">
          <h2 class="text-xl font-semibold text-warmgray-700 mb-2">Get helpful tips in your inbox</h2>
          <p class="text-warmgray-500 text-sm mb-4">Simple strategies and insights for supporting your child's speech development.</p>
          <script src="https://f.convertkit.com/ckjs/ck.5.js"></script>
          <form action="https://app.kit.com/forms/8889095/subscriptions" class="seva-form formkit-form" method="post" data-sv-form="8889095" data-uid="fe9960d287" data-format="inline" data-version="5">
            <div class="flex flex-col sm:flex-row gap-2">
              <input type="email" name="email_address" placeholder="Email Address" required class="flex-1 px-4 py-2 rounded-lg border border-sage-200 focus:border-sage-400 focus:ring-2 focus:ring-sage-100 outline-none" />
              <button type="submit" class="bg-sage-400 text-white px-6 py-2 rounded-lg font-medium hover:bg-sage-500 transition-colors">Subscribe</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Blog Posts -->
  <section class="py-16">
    <div class="max-w-3xl mx-auto px-4">
      <div class="space-y-8">
        {posts.map(post => (
          <a href={`/blog/${post.slug}`} class="block bg-white rounded-xl p-8 shadow-sm border border-sage-100 hover:shadow-md hover:border-sage-200 transition-all animate-on-scroll">
            <p class="text-sage-500 font-medium text-sm mb-2">{post.category}</p>
            <h2 class="text-2xl font-semibold text-warmgray-700 mb-3 hover:text-sage-600 transition-colors">{post.title}</h2>
            <p class="text-warmgray-500 mb-4">{post.excerpt}</p>
            <div class="flex items-center justify-between">
              <p class="text-warmgray-400 text-sm">{post.date}</p>
              <span class="text-sage-500 font-medium text-sm">Read more â†’</span>
            </div>
          </a>
        ))}
      </div>

      <!-- Branch Divider -->
      <div class="my-16 flex justify-center">
        <img src="/branch-divider.png" alt="" class="w-64 h-auto opacity-60" />
      </div>

      <!-- More Coming Soon -->
      <div class="text-center text-warmgray-400">
        <p>More articles coming soon...</p>
      </div>
    </div>
  </section>
</Layout>

