---


import DashboardLayout from '../../components/dashboard/DashboardLayout';
import ScoreCard from '../../components/dashboard/ScoreCard';
import CompanyTable from '../../components/dashboard/CompanyTable';
import { CATEGORY_INFO, formatMarketCap, type Company, type FutureCategory } from '../../lib/types';
import { calculateAsymmetryScore } from '../../services/scoring';

// Sample data - in production this would come from the database
const sampleCompanies: Company[] = [
  {
    ticker: 'RKLB',
    name: 'Rocket Lab USA',
    futureCategory: 'national-security-space',
    marketCap: 12_000_000_000,
    insiderOwnership: 15,
    currentTAM: 10_000_000_000,
    futureTAM: 500_000_000_000,
    tamMultiple: 50,
    priceChange30d: 25.5,
    founderActive: true,
  },
  {
    ticker: 'OKLO',
    name: 'Oklo Inc',
    futureCategory: 'advanced-energy',
    marketCap: 3_500_000_000,
    insiderOwnership: 45,
    currentTAM: 1_000_000_000,
    futureTAM: 300_000_000_000,
    tamMultiple: 300,
    priceChange30d: 15.2,
    founderActive: true,
    insiderBuying90d: 500_000,
  },
  {
    ticker: 'ASTS',
    name: 'AST SpaceMobile',
    futureCategory: 'national-security-space',
    marketCap: 8_000_000_000,
    insiderOwnership: 28,
    currentTAM: 5_000_000_000,
    futureTAM: 200_000_000_000,
    tamMultiple: 40,
    priceChange30d: -5.3,
    founderActive: true,
  },
  {
    ticker: 'TWST',
    name: 'Twist Bioscience',
    futureCategory: 'synthetic-biology',
    marketCap: 2_800_000_000,
    insiderOwnership: 8,
    currentTAM: 3_000_000_000,
    futureTAM: 150_000_000_000,
    tamMultiple: 50,
    priceChange30d: 12.8,
  },
  {
    ticker: 'COHR',
    name: 'Coherent Corp',
    futureCategory: 'intelligence-infrastructure',
    marketCap: 15_000_000_000,
    insiderOwnership: 3,
    currentTAM: 20_000_000_000,
    futureTAM: 100_000_000_000,
    tamMultiple: 5,
    priceChange30d: 8.4,
  },
];

// Calculate scores for each company
const companiesWithScores = sampleCompanies.map(company => ({
  ...company,
  scores: calculateAsymmetryScore(company),
})).sort((a, b) => (b.scores?.total || 0) - (a.scores?.total || 0));

// Get top scorer for featured card
const topCompany = companiesWithScores[0];

// Category stats
const categoryStats = Object.keys(CATEGORY_INFO).slice(0, 6).map(key => {
  const category = key as FutureCategory;
  const companies = companiesWithScores.filter(c => c.futureCategory === category);
  return {
    category,
    count: companies.length,
    avgScore: companies.length > 0
      ? companies.reduce((sum, c) => sum + (c.scores?.total || 0), 0) / companies.length
      : 0,
  };
});
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Company Hunter Dashboard</title>
  <link rel="stylesheet" href="/src/styles/global.css" />
</head>
<body class="bg-gray-900">
  <DashboardLayout client:load currentPath="/dashboard">
    <div class="space-y-6">
      <!-- Header -->
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-white">Dashboard</h1>
          <p class="text-gray-400">Find asymmetric opportunities in emerging markets</p>
        </div>
        <a
          href="/dashboard/screener"
          class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-500 transition-colors"
        >
          Open Screener
        </a>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
          <div class="text-gray-400 text-sm mb-1">Tracked Companies</div>
          <div class="text-2xl font-bold text-white">{companiesWithScores.length}</div>
          <div class="text-xs text-gray-500 mt-1">Across {categoryStats.filter(c => c.count > 0).length} categories</div>
        </div>

        <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
          <div class="text-gray-400 text-sm mb-1">Avg Asymmetry Score</div>
          <div class="text-2xl font-bold text-indigo-400">
            {(companiesWithScores.reduce((sum, c) => sum + (c.scores?.total || 0), 0) / companiesWithScores.length).toFixed(1)}
          </div>
          <div class="text-xs text-gray-500 mt-1">Out of 10</div>
        </div>

        <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
          <div class="text-gray-400 text-sm mb-1">High Conviction</div>
          <div class="text-2xl font-bold text-green-400">
            {companiesWithScores.filter(c => (c.scores?.total || 0) >= 7).length}
          </div>
          <div class="text-xs text-gray-500 mt-1">Score ≥ 7.0</div>
        </div>

        <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
          <div class="text-gray-400 text-sm mb-1">Avg TAM Multiple</div>
          <div class="text-2xl font-bold text-amber-400">
            {Math.round(companiesWithScores.reduce((sum, c) => sum + (c.tamMultiple || 0), 0) / companiesWithScores.length)}x
          </div>
          <div class="text-xs text-gray-500 mt-1">Future / Current TAM</div>
        </div>
      </div>

      <!-- Main Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Top Opportunity -->
        <div class="lg:col-span-1">
          <h2 class="text-lg font-semibold text-white mb-4">Top Opportunity</h2>
          {topCompany && topCompany.scores && (
            <div class="mb-4">
              <div class="bg-gray-800 rounded-lg p-4 border border-gray-700 mb-4">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-xl font-bold text-white">{topCompany.ticker}</span>
                  <span
                    class="px-2 py-1 rounded text-xs font-medium"
                    style={`background-color: ${CATEGORY_INFO[topCompany.futureCategory].color}20; color: ${CATEGORY_INFO[topCompany.futureCategory].color}`}
                  >
                    {CATEGORY_INFO[topCompany.futureCategory].label}
                  </span>
                </div>
                <p class="text-gray-400 text-sm">{topCompany.name}</p>
                <div class="grid grid-cols-2 gap-4 mt-4 text-sm">
                  <div>
                    <div class="text-gray-500">Market Cap</div>
                    <div class="text-white">{formatMarketCap(topCompany.marketCap)}</div>
                  </div>
                  <div>
                    <div class="text-gray-500">TAM Multiple</div>
                    <div class="text-amber-400">{topCompany.tamMultiple}x</div>
                  </div>
                </div>
              </div>
              <ScoreCard client:load score={topCompany.scores} showRationale={true} />
            </div>
          )}
        </div>

        <!-- Recent Companies -->
        <div class="lg:col-span-2">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-white">Top Ranked Companies</h2>
            <a href="/dashboard/screener" class="text-sm text-indigo-400 hover:text-indigo-300">
              View all →
            </a>
          </div>
          <CompanyTable
            client:load
            companies={companiesWithScores.slice(0, 5)}
            onCompanyClick={(ticker: string) => {
              window.location.href = `/dashboard/company/${ticker}`;
            }}
          />
        </div>
      </div>

      <!-- Category Overview -->
      <div>
        <h2 class="text-lg font-semibold text-white mb-4">Categories</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
          {categoryStats.map(stat => (
            <div
              class="bg-gray-800 rounded-lg p-4 border border-gray-700 hover:border-gray-600 transition-colors cursor-pointer"
            >
              <div
                class="w-3 h-3 rounded-full mb-2"
                style={`background-color: ${CATEGORY_INFO[stat.category].color}`}
              />
              <div class="text-sm font-medium text-white">
                {CATEGORY_INFO[stat.category].label}
              </div>
              <div class="text-xs text-gray-400 mt-1">
                {stat.count} {stat.count === 1 ? 'company' : 'companies'}
              </div>
              {stat.avgScore > 0 && (
                <div class="text-xs text-indigo-400 mt-1">
                  Avg: {stat.avgScore.toFixed(1)}/10
                </div>
              )}
            </div>
          ))}
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
        <h2 class="text-lg font-semibold text-white mb-4">Quick Actions</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <a
            href="/dashboard/screener"
            class="flex items-center gap-3 p-4 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors"
          >
            <div class="p-2 bg-indigo-600 rounded-lg">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
            <div>
              <div class="font-medium text-white">Screen Companies</div>
              <div class="text-sm text-gray-400">Find new opportunities</div>
            </div>
          </a>

          <a
            href="/dashboard/research"
            class="flex items-center gap-3 p-4 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors"
          >
            <div class="p-2 bg-emerald-600 rounded-lg">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div>
              <div class="font-medium text-white">TAM Research</div>
              <div class="text-sm text-gray-400">Estimate future markets</div>
            </div>
          </a>

          <a
            href="/dashboard/watchlist"
            class="flex items-center gap-3 p-4 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors"
          >
            <div class="p-2 bg-amber-600 rounded-lg">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
              </svg>
            </div>
            <div>
              <div class="font-medium text-white">Watchlist</div>
              <div class="text-sm text-gray-400">Track your picks</div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </DashboardLayout>
</body>
</html>
