---


import DashboardLayout from '../../components/dashboard/DashboardLayout';
import CompanyTable from '../../components/dashboard/CompanyTable';
import { type Company } from '../../lib/types';
import { calculateAsymmetryScore } from '../../services/scoring';

// Sample watchlist data
const watchlistCompanies: Company[] = [
  {
    ticker: 'OKLO',
    name: 'Oklo Inc',
    futureCategory: 'advanced-energy',
    marketCap: 3_500_000_000,
    insiderOwnership: 45,
    currentTAM: 1_000_000_000,
    futureTAM: 300_000_000_000,
    tamMultiple: 300,
    priceChange30d: 15.2,
    founderActive: true,
    insiderBuying90d: 500_000,
  },
  {
    ticker: 'RKLB',
    name: 'Rocket Lab USA',
    futureCategory: 'national-security-space',
    marketCap: 12_000_000_000,
    insiderOwnership: 15,
    currentTAM: 10_000_000_000,
    futureTAM: 500_000_000_000,
    tamMultiple: 50,
    priceChange30d: 25.5,
    founderActive: true,
  },
];

const companiesWithScores = watchlistCompanies.map(company => ({
  ...company,
  scores: calculateAsymmetryScore(company),
}));
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Watchlist - Company Hunter</title>
  <link rel="stylesheet" href="/src/styles/global.css" />
</head>
<body class="bg-gray-900">
  <DashboardLayout client:load currentPath="/dashboard/watchlist">
    <div class="space-y-6">
      <!-- Header -->
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-white">Watchlist</h1>
          <p class="text-gray-400">Your tracked opportunities</p>
        </div>
        <button class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-500 transition-colors flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Add Company
        </button>
      </div>

      {companiesWithScores.length > 0 ? (
        <CompanyTable
          client:load
          companies={companiesWithScores}
          onCompanyClick={(ticker: string) => {
            window.location.href = `/dashboard/company/${ticker}`;
          }}
        />
      ) : (
        <div class="bg-gray-800 rounded-lg p-12 border border-gray-700 text-center">
          <svg class="w-16 h-16 text-gray-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
          <h3 class="text-lg font-medium text-white mb-2">No companies in your watchlist</h3>
          <p class="text-gray-400 mb-4">Start adding companies from the screener to track them here.</p>
          <a
            href="/dashboard/screener"
            class="inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-500 transition-colors"
          >
            Go to Screener
          </a>
        </div>
      )}
    </div>
  </DashboardLayout>
</body>
</html>
