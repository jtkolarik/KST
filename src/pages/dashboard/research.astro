---


import DashboardLayout from '../../components/dashboard/DashboardLayout';
import TAMChart from '../../components/dashboard/TAMChart';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>TAM Research - Company Hunter</title>
  <link rel="stylesheet" href="/src/styles/global.css" />
</head>
<body class="bg-gray-900">
  <DashboardLayout client:load currentPath="/dashboard/research">
    <div class="space-y-6">
      <!-- Header -->
      <div>
        <h1 class="text-2xl font-bold text-white">TAM Research</h1>
        <p class="text-gray-400">Estimate current and future Total Addressable Markets</p>
      </div>

      <!-- TAM Estimation Tool -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Input Form -->
        <div class="bg-gray-800 rounded-lg border border-gray-700 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-700">
            <h3 class="text-lg font-semibold text-white">TAM Estimator</h3>
            <p class="text-sm text-gray-400">Enter company details to calculate TAM metrics</p>
          </div>

          <form class="p-6 space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Ticker Symbol</label>
              <input
                type="text"
                placeholder="e.g., OKLO"
                class="w-full bg-gray-700 border border-gray-600 rounded-lg py-2 px-4 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Current TAM ($)</label>
              <input
                type="text"
                placeholder="e.g., 1000000000"
                class="w-full bg-gray-700 border border-gray-600 rounded-lg py-2 px-4 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500"
              />
              <p class="text-xs text-gray-500 mt-1">The addressable market today</p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Future TAM ($)</label>
              <input
                type="text"
                placeholder="e.g., 300000000000"
                class="w-full bg-gray-700 border border-gray-600 rounded-lg py-2 px-4 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500"
              />
              <p class="text-xs text-gray-500 mt-1">Projected market if technology succeeds (5-10 years)</p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Time Horizon (Years)</label>
              <select class="w-full bg-gray-700 border border-gray-600 rounded-lg py-2 px-4 text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <option value="5">5 years</option>
                <option value="7">7 years</option>
                <option value="10" selected>10 years</option>
                <option value="15">15 years</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Rationale</label>
              <textarea
                rows="4"
                placeholder="Why will this market grow? What technological unlock enables it?"
                class="w-full bg-gray-700 border border-gray-600 rounded-lg py-2 px-4 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500"
              ></textarea>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Confidence Level</label>
              <input
                type="range"
                min="0"
                max="100"
                value="50"
                class="w-full h-2 bg-gray-700 rounded-lg appearance-none cursor-pointer accent-indigo-500"
              />
              <div class="flex justify-between text-xs text-gray-500 mt-1">
                <span>Low</span>
                <span>50%</span>
                <span>High</span>
              </div>
            </div>

            <button
              type="submit"
              class="w-full py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-500 transition-colors font-medium"
            >
              Save TAM Research
            </button>
          </form>
        </div>

        <!-- Example Chart -->
        <div>
          <TAMChart
            client:load
            currentTAM={1_000_000_000}
            futureTAM={300_000_000_000}
            marketCap={3_500_000_000}
            ticker="OKLO"
          />

          <div class="mt-4 bg-gray-800 rounded-lg p-4 border border-gray-700">
            <h4 class="font-medium text-white mb-2">TAM Research Framework</h4>
            <ol class="text-sm text-gray-400 space-y-2 list-decimal list-inside">
              <li><strong class="text-gray-300">Technological Unlock:</strong> What becomes possible?</li>
              <li><strong class="text-gray-300">Incentive Gradient:</strong> Who must adopt this?</li>
              <li><strong class="text-gray-300">Equilibrium State:</strong> What's the end-state market?</li>
              <li><strong class="text-gray-300">Future TAM:</strong> Size if technology succeeds</li>
            </ol>
          </div>
        </div>
      </div>

      <!-- Recent Research -->
      <div>
        <h2 class="text-lg font-semibold text-white mb-4">Recent TAM Research</h2>
        <div class="bg-gray-800 rounded-lg border border-gray-700 overflow-hidden">
          <table class="min-w-full divide-y divide-gray-700">
            <thead class="bg-gray-900">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase">Ticker</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase">Current TAM</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase">Future TAM</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase">Multiple</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase">Confidence</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase">Updated</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
              <tr class="hover:bg-gray-750">
                <td class="px-6 py-4 text-white font-medium">OKLO</td>
                <td class="px-6 py-4 text-gray-300">$1B</td>
                <td class="px-6 py-4 text-gray-300">$300B</td>
                <td class="px-6 py-4 text-amber-400">300x</td>
                <td class="px-6 py-4"><span class="text-yellow-400">65%</span></td>
                <td class="px-6 py-4 text-gray-400">2 days ago</td>
              </tr>
              <tr class="hover:bg-gray-750">
                <td class="px-6 py-4 text-white font-medium">RKLB</td>
                <td class="px-6 py-4 text-gray-300">$10B</td>
                <td class="px-6 py-4 text-gray-300">$500B</td>
                <td class="px-6 py-4 text-amber-400">50x</td>
                <td class="px-6 py-4"><span class="text-green-400">75%</span></td>
                <td class="px-6 py-4 text-gray-400">1 week ago</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </DashboardLayout>
</body>
</html>
