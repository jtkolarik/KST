---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="max-w-6xl mx-auto px-4 py-4">
  <ol class="flex flex-wrap items-center gap-2 text-sm text-warmgray-500">
    <li>
      <a href="/" class="hover:text-sage-500 transition-colors">Home</a>
    </li>
    {items.map((item, index) => (
      <li class="flex items-center gap-2">
        <span class="text-warmgray-300">/</span>
        {item.href ? (
          <a href={item.href} class="hover:text-sage-500 transition-colors">
            {item.label}
          </a>
        ) : (
          <span class="text-warmgray-700 font-medium">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>
